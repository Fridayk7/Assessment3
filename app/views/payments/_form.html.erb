<% @credit_cards = CreditCard.where(user_id: current_user.id) %>
<% @user = current_user %>
  <div class="field">
    <%= form.label :credit_card_id %>
    <%= form.collection_select(:credit_card_id, @credit_cards, :id, :organisation)%>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.hidden_field :user_id, :value => @user.id %>
    <%= @user.name %>
  </div>
<% @current_user_orders.each do |ord| %>

  <div class="field">
    <%= form.hidden_field :order_id, :value => ord.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

<% end %>
